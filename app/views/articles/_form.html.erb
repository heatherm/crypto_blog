<div class="ml-4">
<%= form_with model: article do |form| %>
  <div>
    <%= form.label :title, class: "block text-gray-700" %>
    <%= form.text_field :title, autofocus: true, class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none", required: "required" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body, class: "block text-gray-700" %>
    <%= form.text_area :body, autofocus: true, class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none", required: "required" %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>

    <%= form.submit class: "w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg
              px-4 py-3 mt-6" %>
  </div>
<% end %>
</div>