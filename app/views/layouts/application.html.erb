<!DOCTYPE html>
<html>
  <head>
    <title>CryptoBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%=javascript_include_tag "https://www.authy.com/form.authy.min.js" %>
    <%=stylesheet_link_tag "https://www.authy.com/form.authy.min.css" %>

  <div class="w-full h-screen">
    <%- if controller_name != 'sessions' && controller_name != 'registrations' && controller_name != 'devise_authy'%>
    <header class="bg-teal-400 flex">
      <nav class="flex justify-between w-full bg-purple-500 text-white p-4">
        <a href="/"><span class="font-semibold text-xl tracking-tight">Blog</span></a>
        <div class="md:items-center md:w-auto flex">
          <div class="flex text-sm" v-else>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'p-3 block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg'  %>
          </div>
        </div>
      </nav>
    </header>
    <%- end %>
    <main>
      <%= yield %>
    </main>
  </div>
 </html>
